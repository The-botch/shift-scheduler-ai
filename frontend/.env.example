# Backend API URL
VITE_API_URL=http://localhost:3001
VITE_BACKEND_API_URL=http://localhost:3001

# LINE LIFF ID
VITE_LIFF_ID=your_liff_id_here

# OpenAI API Key
VITE_OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Configuration
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_MAX_TOKENS=2000

# GitHub Personal Access Token
GH_TOKEN=your_github_token_here

# デフォルト設定値
# ハードコーディングを避けるため、設定値を環境変数で管理

# デフォルトテナントID（マルチテナント対応）
VITE_DEFAULT_TENANT_ID=1

# デフォルト店舗ID
VITE_DEFAULT_STORE_ID=1

# デモ・開発用設定
VITE_DEMO_PLAN_ID=4
VITE_DEMO_STAFF_ID=5
VITE_DEMO_YEAR=2024
VITE_DEMO_MONTH=10

# Basic Authentication Configuration
# Set BASIC_AUTH_ENABLED to 'true' to enable Basic Auth (recommended for staging/production only)
BASIC_AUTH_ENABLED=false

# Multiple user credentials in JSON format
# Example: [{"username":"admin","password":"secure_password"},{"username":"user2","password":"password2"}]
BASIC_AUTH_CREDENTIALS=[{"username":"the-botch-admin","password":"thebotch123"}]

# Session duration in milliseconds (default: 3600000 = 1 hour)
# Examples: 1800000 (30 minutes), 7200000 (2 hours), 86400000 (24 hours)
BASIC_AUTH_SESSION_DURATION=3600000
